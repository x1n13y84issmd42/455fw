{
	"compilerOptions": {
		"module": "Node16",
		"target": "ESNext",

		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,

		"declaration": true,
		"sourceMap": true,

		"jsx": "react-jsx",

		"moduleResolution": "NodeNext",
		
		"outDir": "./dist",
		"baseUrl": "./src",
		
		"incremental": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
	}
}
